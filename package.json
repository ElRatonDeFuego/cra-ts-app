{
  "name": "cra-ts-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.27.2",
    "axios-hooks": "^3.1.4",
    "graphql": "^16.6.0",
    "joi": "^17.6.0",
    "msw": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.47",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "eslint-plugin-escape": "^1.0.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-sonarjs": "^0.15.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react-scripts": "5.0.1",
    "sass": "^1.54.4",
    "serve": "^14.0.1",
    "source-map-explorer": "^2.5.2",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "build": "react-scripts build",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "pre-commit": "npm run lint && lint-staged && npm run test:only-changed && tsc",
    "pre-push": "npm run pre-commit && npm run test:coverage",
    "serve": "serve -s build -l 3000",
    "start": "BROWSER=none react-scripts start",
    "test": "react-scripts test --watchAll=false",
    "test:coverage": "npm t -- --coverage .",
    "test:coverage:watch": "npm t -- --coverage --watchAll=true .",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "test:only-changed": "npm t -- --onlyChanged",
    "test:watch": "npm t -- --watchAll=true"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "./src/{components,hooks}/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "src/{components,hooks}/**/*.{ts,tsx}": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
